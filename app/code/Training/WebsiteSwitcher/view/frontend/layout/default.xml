<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceBlock name="catalog.topnav">
            <block class="Training\WebsiteSwitcher\Block\Website\Switcher"
                   name="website.switcher"
                   template="Training_WebsiteSwitcher::website-switcher.phtml">
                <arguments>
                    <argument name="background_color" xsi:type="string">lightskyblue</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
